@{

    ViewData["Title"] = "Home Page";
    Layout = "_LayoutBlack";
}

<style>
    .container-fluid {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
    }

    .login-form {
        width: 350px;
    }
</style>

<div class="container-fluid">
    <form class="login-form" asp-action="Index" method="post" asp-controller="Auth">
        <h2 class="text-center mb-4">Iniciar Sesión</h2>
        <div class="form-group">
            <label for="usuario">Nombre de Usuario</label>
            <input type="text" class="form-control" id="usuario" name="usuario" placeholder="Ingresa tu nombre de usuario">
        </div>
        <div class="form-group">
            <label for="password">Contraseña</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Ingresa tu contraseña">
        </div>

        <a class="text-primary" asp-area="" asp-controller="Auth" asp-action="RecuperarContracena">Recuperar Contraceña</a>
        <br/>
        <button type="submit" class="btn btn-primary btn-block">Iniciar Sesión</button>
    </form>
</div>

@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}